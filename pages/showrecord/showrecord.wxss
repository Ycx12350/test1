Page {  
  background: #fff;  
} 
.check-text {
  font-size: 16px;
  display: flex;
  justify-content: space-between;
}

.shop {
  padding: 0 20px;
}

.middle {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.param {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods {
  padding-left: 20px;
  padding-right: 20px;
  display: flex;
  justify-content: space-between;
}
.cut {
  margin-left: 50px;
  border-bottom: 1px solid lightgray;
}

.select {
  display: flex;
  align-items: center;
  padding-right: 10px;
}

.count {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #353535;
  width: 30px;
  text-align: center;
  line-height: 1;
  font-size: 10pt;
}

.img {
  display: flex;
  align-items: center;
  padding-right: 10px;
  justify-content: center;
}

.delete {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  text-align: right;
}

.price .real {
  font-size: 11pt;
  color: red;
}

.price .cost {
  font-size: 0.65rem;
  text-decoration: line-through;
  color: #a0a0a0;
}

.tar {
  display: flex;
  background-color: whitesmoke;
  width: 100%;
  height: 10%;
  border: 1px solid lightgray;
  align-items: center;
  text-align: center;
  justify-content: space-between;
}

.bottom-tar {
  align-items: center;
}

.title {
  font-size: 16px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 2;
}

.quantity {
  display: flex;
  align-items: center;
}

.quantity .btn-ad {
  border-radius: 50%;
  width: 1.2rem;
  height: 1.1rem;
  font-size: 1rem;
  color: white;
  background-color: #dc143c;
  line-height: 1rem;
  text-align: center;
}

.pay {
  font-size: 10pt;
  color: white;
}

.total {
  display: flex;
  justify-content: space-between;
  font-size: 10pt;
  color: red;
}

.allchoose {
  position: relative;
  top: 3px;
}

.tips {
  justify-content: center;
}

/*mask  自定义toast*/

.toast_mask {
  opacity: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
}

/*toast*/

.toast_content_box {
  position: fixed;
  top:0%;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.toast_content {
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
}

.toast_content_text {
  height: 100%;
  width: 100%;
  color: #FFf;
  font-size: 28rpx;
  text-align: center;
}
