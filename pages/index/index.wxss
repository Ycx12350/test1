.header {
  padding: 5px 0;
  z-index: 999;
  width: 100%;
}

.banner {
  border-bottom: 10px solid #e9e9e9;
}

.search {
  margin: 0 20px;
  display: flex;
  opacity: 0.5;
  border-radius: 20px;
  justify-content: center;
  align-items: center;
  color: grey;
  font-weight: bold;
  background: lightgrey;
  font-size: 14px;
  background-color: whitesmoke;
}

.input {
  width: 98%;
  background-color: white;
  border-radius: 5px;
}

.block {
  margin-bottom: 4px;
  background-color: white;
  width: 100%;
  clear: both;
}

.item {
  text-align: center;
  clear: both;
}

.title {
  font-weight: 700;
  color: #353535;
