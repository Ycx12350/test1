.border1 {
  display: flex;
  justify-content: center;
}

.border {
  margin-top: 8px;
  margin-bottom: 5px;
  border-bottom: 1px solid #e9e9e9;
  width: 93%;
}

.introduce {
  font-size: 12px;
  color: grey;
}

.text-info {
  font-size: 13px;
}

.page {
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  border-bottom: 7px solid whitesmoke;
}

.page-font {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.videodetail {
  float: left;
  width: 45%;
  padding-left: 13px;
  padding-top: 8rpx;
}

.videodetail2 {
  display: flex;
  justify-content: space-between;
  text-align: left;
  padding-left: 23rpx;
}

.startloop {
  flex: 1;
  width: 100%;
}

.img {
  display: flex;
  align-items: center;
}

.write {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
}

.name {
  padding-top: 5px;
  font-size: 16px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.price {
  display: flex;
  align-items: flex-end;
  font-size: 15px;
  color: #f7941e;
  padding-right: 25rpx;
  padding-bottom: 5px;
}

.preach {
  font-size: 14px;
}

.playcount {
  padding-top: 5px;
  padding-bottom: 5px;
  font-size: 12px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.name2 {
  font-size: 16px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  padding-bottom: 15rpx;
}

.price2 {
  display: flex;
  align-items: flex-end;
  font-size: 15px;
  color: #f7941e;
  padding-right: 25rpx;
  padding-bottom: 10px;
}

.preach2 {
  font-size: 14px;
}

.publicdate2 {
  padding-top: 5px;
  padding-bottom: 10px;
  color: grey;
  font-size: 15px;
}

.swiper_container {
  height: 55rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-top: 15rpx;
  border-bottom: 10px solid #e9e9e9;
}

.swiper_item {
  font-family: 黑体;
  color: orange;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
