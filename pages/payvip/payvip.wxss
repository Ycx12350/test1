/* pages/payvip/payvip.wxss */

.poster {
  background-color: grey;
}

.paycount {
  height: 350rpx;
  background-color: grey;
}

.total {
  color: white;
  font-size: 20pt;
  font-family: 宋体;
  text-align: center;
  padding-top: 5rpx;
  padding-bottom: 15rpx;
}

.urlview {
  display: flex;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 120rpx;
  background-color: white;
}

.count {
  display: flex;
  margin-left: 5rpx;
  margin-right: 10rpx;
  /* text-align: center; */
  align-items: center;
  justify-content: center;
  background-size: 100% 100%;
  height: 120rpx;
  color: #f7941e;
  font-family: 微软雅黑;
}

.money {
  display: flex;
  width: 70%;
  align-items: center;
  padding-left: 15rpx;
}

.current {
  font-size: 20px;
  color: #f7941e;
}
.original{
  text-decoration: line-through;
  padding-left: 10px;
  font-size: 14px;
  color: #999;
}

.topay {
  width: 30%;
  height: 100%;
  background-color: #f7941e;
  color: white;
  font-family: 宋体;
  display: flex;
  justify-content: center;
  align-items: center;
}
