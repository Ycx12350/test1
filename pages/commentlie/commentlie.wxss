/* pages/commentlie/commentlie.wxss */
.title{
  padding: 2.5%;
  background: gainsboro;
  font-size: 16px;

}
.body{
  width:96%;
  padding: 10px 0px;
  margin-left: 4%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e5e5e5;
  
}
.commenttext{
  display: flex;
  flex-direction: column;
  font-family: 微软雅黑;
  
}
.commentcontainer{
  font-size: 13px;
  padding-top: 5px;
  color: #666
  }



.commentinput{
  border-top: 1px solid gainsboro;
  display: flex;
  position: fixed;
  bottom: 0px;
  height: 50px;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size:15px;

}
.input{
  display: flex;
  height: 35px;
  width: 80%;
  background-color: #e5e5e5;
  border-radius: 20px;
  justify-content: center;
  align-items: center;
  color: #666;
}