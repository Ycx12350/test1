.header {
  padding-top: 2px;
  padding-bottom: 2px;
  border-bottom: 1px solid #d7d7d7;
  background: #e9e9e9;
}

.content {
  background: #e9e9e9;
  display: flex;
  width: 100%;
  height:100%;
  background-color: white;
}

.search {
  margin: 0 5px;
  display: flex;
  border-radius: 20px;
  justify-content: center;
  align-items: center;
  color: grey;
  font-size: 14px;
  background-color: whitesmoke;
}

.nav_right {
  /* position: absolute; */
  padding: 0px;
  box-sizing: border-box;
}

.nav_right .nav_right_items {
  display: flex;
  text-align: center;
  padding: 10px px;
}

.nav_right_items {
  margin-bottom: 15rpx;
}

.nav_right .nav_right_items text {
  display: block;
  margin-top: 5px;
   font-size: 10px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nav_left {
  display: inline-block;
  width: 22%;
  background: #f5f5f5;
  text-align: center;
  border-right: 1px solid #d7d7d7;
}

.nav_left .nav_left_items {
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  background-color: whitesmoke;
  font-size: 12px;
  color: #353535;
  border-bottom: 1px solid #d7d7d7;
}

.nav_left .nav_left_items.active {
  border-left: 3px solid #f7941e;
  padding-left: 3px;
  box-shadow: 2px 2px 3px whitesmoke;
  background-color: white;
  font-size: 13px;
  font-weight: 400;
  /* text-shadow: -1px -1px white,1px 1px #353535; */
}

.img {
  display: flex;
  align-items: center;
  padding-left: 15rpx;
  overflow: hidden;
}

