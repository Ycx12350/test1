
.button {
  padding: 9px 9px;
  margin: 0 10px;
  display: flex;
  align-items: center;
  border-radius: 30px;
  z-index: 999;
}

.tip {
  color: white;
  padding-bottom: 20px;
}

.time {
  color: white;
  font-size: 11px;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20px;
}

/*mask*/

.drawer_screen {
  width: 100%;
  position: fixed;
  top: 42px;
  left: 0;
  z-index: 66;
  overflow: hidden;
  background-color: black;
}

/*content*/

.drawer_content {
  background-color: #353535;
  display: flex;
  z-index: 1001;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}

.drawer_title {
  font: 42rpx "microsoft yahei";
  text-align: center;
}

.title {
  padding: 10px 0;
  border-bottom: 1px solid lightgrey;
  font-size: 16px;
}

.intor {
  padding-top: 10px;
  line-height: 1.5;
  font-size: 15px;
  color: #a9a9a9;
  font-family: 微软雅黑;
}

.body {
  padding: 20px 0;
}

.pad {
  padding: 0 20px;
}

.price {
  font-family: 微软雅黑;
  color: #f7941e;
  padding-bottom: 3px;
}
.line{
  border-bottom: 5px solid #efeff4;
}

.aaa {
  display: flex;
  font-size: 10pt;
  padding-right: 15rpx;
}

.lump {
  margin-right: 10rpx;
  width: 12pt;
  height: 12pt;
  /* background-color: #ffe7ba; */
}

.tar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 16%;
  margin-bottom: 5px
}

.tar view{
  display:flex;
  justify-content: center;
  align-items:center; 
  padding: 0 20px;
  background-color: #f7941e;
  color: white;
  width: 60%;
  height: 100%;
  border-radius: 30px
}
/*评论区*/
.comment{
  display: flex;
  width: 100%;
  justify-content: flex-end;
  height: 50px;
  align-items: center;
  position: fixed;
  bottom: 0px;
  background-color: white;
  border-top: 1px solid #d7d7d7;
}

.comment-icon{
  padding-right: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px
}

.coll {
  display: flex;
  align-items: center;
  font-family: 楷体;
  font-size: 13pt;
  color: orange;
}

.coll1 {
  display: flex;
  align-items: center;
  font-family: 楷体;
  font-size: 13pt;
  color: green;
}


.swiper_container {
  height: 55rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-top: 15rpx;
  border-bottom: 10px solid #e9e9e9;
  border-top: 10px solid #e9e9e9;
}

.swiper_item {
  font-family: 黑体;
  color: orange;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

.qr{
  padding-top: 10px;
  line-height: 2.5;
  font-size: 15px;
  color: #a9a9a9;
  font-family: 微软雅黑;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/*顶部按钮*/
.titlebutton{
  margin-top: 5px;
  display:flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid 	#f7941e;
  border-radius: 5px;
  font-family: 微软雅黑;
  font-size: 14px;
  color: #f7941e;
  width: 97.5%;
  position: fixed;
  top: 0;
  left: 1%;
}
.titlebutton view{
  width:33.33%;
  height:30px;
  line-height:30px;
  text-align:center;
}
.is_checked{
  background-color: #f7941e;
  color: white;
}

/*音频区*/
.diobody{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position:absolute;
  top:42px;
  padding: 0px 2.5%;
  width: 95%
}
.diocontent{
  width: 100%;
  padding-bottom: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.diotitle{
  padding: 10px 0px;
  border-bottom: 1px solid #d7d7d7;
}

.contentfont {
  line-height: 1.5;
  font-size: 15px;
  font-family: 微软雅黑;
}
.audioview{
  display: flex;
  justify-content:space-between;
  padding-top: 5px;
  padding-bottom: 20px;

}
.audioimage{
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 25%;
}

.audiorightline1{
  display: flex;
  justify-content: center;
}

.audiorightline3{
  display: flex;
  justify-content: space-between;
}